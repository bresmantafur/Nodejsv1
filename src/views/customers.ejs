<%- include("partials/_header") %>

<div class="container my-5">
  <div class="row">
    <!-- Tabla de clientes -->
    <div class="col-md-7">
      <div class="card shadow-sm mb-4">
        <div class="card-body">
          <!-- Mostrar mensaje de éxito si existe -->
          <% if (successMessage) { %>
            <div class="alert alert-success" role="alert">
              <%= successMessage %>
            </div>
          <% } %>

          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>n°</th>
                <th>Nombre</th>
                <th>Dirección</th>
                <th>Teléfono</th>
                <th>Acciones</th>
              </tr>
            </thead>
            <tbody>
              <% if (data && Array.isArray(data) && data.length > 0) { %>
                <% data.forEach((customer, index) => { %>
                  <tr>
                    <td><%= index + 1 %></td>
                    <td><%= customer.name %></td>
                    <td><%= customer.direccion %></td>
                    <td><%= customer.telefono %></td>
                    <td>
                      <a href="/delete/<%= customer.id %>" class="btn btn-outline-danger btn-sm">Eliminar</a>
                      <a href="/edit/<%= customer.id %>" class="btn btn-outline-success btn-sm">Editar</a>
                    </td>
                  </tr>
                <% }); %>
              <% } else { %>
                <tr>
                  <td colspan="5" class="text-center">No hay datos disponibles</td>
                </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- Formulario para agregar un cliente -->
    <div class="col-md-5">
      <div class="card shadow-sm">
        <div class="card-body">
          <h5 class="card-title mb-4">Agregar Cliente</h5>
          <form action="/add" method="post">
            <div class="form-group mb-3">
              <input type="text" name="name" placeholder="Nombre" class="form-control" required>
            </div>
            <div class="form-group mb-3">
              <input type="text" name="direccion" placeholder="Dirección" class="form-control" required>
            </div>
            <div class="form-group mb-3">
              <input type="text" name="telefono" placeholder="Teléfono" class="form-control" required>
            </div>
            <button type="submit" class="btn btn-primary w-100">Guardar Comprador</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("partials/_footer") %>
